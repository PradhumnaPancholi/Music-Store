@model IEnumerable<music_store.Models.Album>
@{
                /**/

                ViewBag.Title = "Albums";
                Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Albums</h2>
<section class="container">
    @foreach (var item in Model)
    {
        <div class="col-md-4 text-center well">
            <h4>@item.Title</h4>
            <img src="@item.AlbumArtUrl" alt="@item.Title" />
            <div>
                @String.Format("{0:c}", item.Price) <br />
                @item.Artist.Name <br />
                <a href="/Store/AddToCart?AlbumId=@item.AlbumId">
                    <button class="btn btn-primary">Add to Cart</button>
                </a>
            </div>
        </div>
    }
</section>

